      <input name="id" type="hidden" class="form-control" value="<?php echo $row['id']; ?>">
    </form>
    `;
} else if (status === "Postponded") {
    detailsDiv.innerHTML = `
    <form action="enrollment_workingpending_edit.php" method="post">
      <div class="form-group">
        <label for="license_validity_date">Postponed Date:</label>
        <input name="postpond_date" type="date" class="form-control" id="postpond_date">
      </div>
      <input name="id" type="hidden" class="form-control" value="<?php echo $row['id']; ?>">
    </form>
    `;
} else {
    // If no status is selected or "Select Status" is chosen, clear the detailsDiv.
